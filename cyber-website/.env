# BizBots Website - Environment Variables
# Copy this file to .env and update with your actual values
# NEVER commit .env to git!

# ============================================
# Phase 1 - Not needed for static site
# ============================================
# Phase 1 is static HTML/CSS/JS, no environment variables required

# ============================================
# Phase 2 - Backend Configuration
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://bizbotsuser:changeme@localhost:5432/bizbots
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bizbots
DB_USER=bizbotsuser
DB_PASSWORD=changeme

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=another-super-secret-key-for-refresh-tokens
REFRESH_TOKEN_EXPIRY=30d

# Google OAuth (Get from: https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# M-Pesa Daraja API (Get from: https://developer.safaricom.co.ke)
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your-passkey
MPESA_CALLBACK_URL=http://localhost:3000/api/payments/mpesa/callback

# AI Services
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
ZEP_URL=http://localhost:8000
ZEP_API_KEY=your-zep-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notifications@bizbots.co.ke
SMTP_PASS=your-gmail-app-password
EMAIL_FROM=noreply@bizbots.co.ke

# Frontend URL
FRONTEND_URL=http://localhost:8080
CORS_ORIGIN=http://localhost:8080

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
SESSION_SECRET=yet-another-secret-key-for-sessions
COOKIE_SECRET=cookie-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# File Uploads
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads/

# ============================================
# Production Overrides
# ============================================
# When deploying to production, update these:
# NODE_ENV=production
# API_URL=https://api.bizbots.co.ke
# FRONTEND_URL=https://bizbots.co.ke
# MPESA_ENVIRONMENT=production
# LOG_LEVEL=info